        </choice>
      </choices>
    </argument>
    <argument>
      <name>apply_type</name>
      <display_name>Select the type of properties that the dynamic coating modifies:</display_name>
      <type>Choice</type>
      <required>true</required>
      <model_dependent>false</model_dependent>
